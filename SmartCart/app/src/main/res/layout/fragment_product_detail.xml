<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/rounded_image_background"
            android:scaleType="centerCrop"
            />

        <!-- Title -->
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Product Title"
            android:textColor="#4A148C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--        &lt;!&ndash; Main Price &ndash;&gt;-->
        <!--        <TextView-->
        <!--            android:id="@+id/details"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="₹199"-->
        <!--            android:textSize="18sp"-->
        <!--            android:textStyle="bold"-->
        <!--            android:textColor="#388E3C"-->
        <!--            android:layout_marginBottom="16dp" />-->

        <!-- Rating and Reviews -->
        <!--        <TextView-->
        <!--            android:id="@+id/detailRating"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Rating: 4.5 ★"-->
        <!--            android:textSize="16sp"-->
        <!--            android:layout_marginBottom="4dp"-->
        <!--            android:textColor="#333333" />-->

        <TextView
            android:id="@+id/detailReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="230 Reviews"
            android:textColor="#666666"
            android:textSize="16sp" />

        <!-- Platform Price Comparison -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/amz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:contentDescription="Amazon Logo"
                    android:src="@drawable/ic_amazon_logo" />

                <TextView
                    android:id="@+id/amazonPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="₹999"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amazonRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2 ★"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fkrt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:contentDescription="Flipkart Logo"
                    android:src="@drawable/ic_flipkart_logo" />

                <TextView
                    android:id="@+id/flipkartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="₹1050"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/flipkartRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.3 ★"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jmrt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:contentDescription="JioMart Logo"
                    android:src="@drawable/ic_jiomart_logo" />

                <TextView
                    android:id="@+id/jiomartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="₹1025"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jiomartRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0 ★"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/addToCartDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#EDE7F6"
            android:padding="12dp"
            android:text="Add to Cart"
            android:textColor="#4A148C" />
    </LinearLayout>
</ScrollView>
